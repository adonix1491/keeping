{
    "devCommand": "npx expo start --web",
    "buildCommand": "npx expo export -p web",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api/|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/hourly-refresh",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/cron/task-monitor",
            "schedule": "*/15 * * * *"
        }
    ]
}